function oppgave4(input) {
	var reg = /\w*$/i
	var first = reg.exec(input);
//	alert(input.length-first.length);
	alert(input.length + " " + first.length);
	var second = input.substring(0, input.length-first.length);
//	alert(first);
//	alert(first + " " + second);
}