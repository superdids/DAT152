//Oppgave 1
//funksjonen skriver ut tittelen på HTML dokumentet
window.onload = function() {
	window.alert(document.getElementsByTagName("title")[0].textContent);
	
	Object.vis();
	"god dag".vis();
	(57).vis();
	document.vis();
	window.vis();
	document.getElementsByTagName('p')[0].vis();
	HTMLHeadingElement.vis();
};

Object.prototype.vis = function () {
	window.alert("" + this + "\n==============\n" + typeof this);
};
