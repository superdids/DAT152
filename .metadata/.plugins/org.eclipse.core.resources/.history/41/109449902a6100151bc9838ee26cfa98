function Vindu(path, parent) {
	this._width = 100;
	this._height = 100;
	this._path = path || null;
	this._parent = parent || null;
}

Vindu.prototype.open = function() {
	try {
		this.window.open(this._path, 
				"Vindu", 
				"width=" + this._width,
				"height=" + this.height);
	} catch(e) {
		console.log(e);
	}
}

Vindu.prototype.close = function() {
	try {
		this.window.close();
	} catch(e) {
		console.log(e);
	}
}

Vindu.prototype.put = function() {
	
	var fName = document.getElementById("fName").value;
	
	this._parent.put({"firstname": fName, });
}

Vindu.prototype.getValues = function() {
	var fName = document.getElementById("fName").value;
	var lName = document.getElementById("fName").value;
	var address = document.getElementById("address").value;
	var phone = document.getElementById("fName").value;
	return {
		"firstname": fName,
		"lastname": lName,
		"address": address,
		"phone": phone
	};
}


