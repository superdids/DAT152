<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Mservice, getUpdates</title>
<script type="text/javascript" src="skript/config.js"></script>
<script type="text/javascript" src="skript/ajax/ajax.js"></script>
<script type="text/javascript">
"use strict";

(function () {
	
  var logIdElm = null;
  var load = function () {
  	document.getElementById("getUpdates").addEventListener("click",getUpdates,false);
  	logIdElm = document.getElementById("logId");
  };
  
  var getUpdates = function(e) {
    var url = config.servicesPath + "/endringer";
    var ajax = new AJAXConnection(url);
    ajax.onsuccess = viewMessage;
	ajax.get([logIdElm.value]);
  };
  
  var viewMessage = function(m) {
    document.getElementById("svar").textContent=m;
  };
  window.addEventListener("DOMContentLoaded",load,false);
})()
</script>

</head>
<body>
<h1>get /endringer/{logId}</h1>
<form>
<p>Sett inn verdi for logId: 
<input type="text" size="3" value="-1" id="logId"/></p>
<p><button type="button" id="getUpdates">Send logId</button></p>
</form>
<p>Resultat:</p>
<div id="svar"></div>
</body>
</html>